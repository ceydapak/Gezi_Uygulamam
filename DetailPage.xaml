<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Gezi_Uygulamam.DetailPage"
             Title="DetailPage">
    <VerticalStackLayout HorizontalOptions="Center" Margin="10">
        <Image x:Name="Img" WidthRequest="300" HeightRequest="200"/>
        <Label x:Name="Title" FontAttributes="Bold" TextColor="Red"/>
        <Label x:Name="Date"/>
        <Label x:Name="Time"/>
        <!--Map-->
    </VerticalStackLayout>
</ContentPage>